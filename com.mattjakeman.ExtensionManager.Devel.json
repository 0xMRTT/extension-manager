{
    "app-id" : "com.mattjakeman.ExtensionManager.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "extension-manager",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.gnome.Shell.Extensions",
        "--talk-name=org.gnome.SessionManager"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
            "name": "blueprint-compiler",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "branch": "main"
                }
            ]
        },
        {
            "name": "text-engine",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mjakeman/text-engine.git",
                    "commit": "dfc3a770fc340b07cb9f862ef4fbb710d4db132b"
                }
            ]
        },
        {
            "name" : "extension-manager",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [ "-Ddevelopment=true" ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "./"
                }
            ]
        }
    ]
}
